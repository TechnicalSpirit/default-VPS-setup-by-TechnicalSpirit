services:
  fail2ban:
    image: crazymax/fail2ban:latest
    container_name: fail2ban
    restart: unless-stopped
    network_mode: host
    cap_add:
      - NET_ADMIN
      - NET_RAW
    volumes:
      - /opt/fail2ban:/data
      - /var/log:/var/log:ro
      - /etc/ssh:/etc/ssh:ro
    environment:
      - TZ=Europe/Moscow
      - DB_PURGE=true
