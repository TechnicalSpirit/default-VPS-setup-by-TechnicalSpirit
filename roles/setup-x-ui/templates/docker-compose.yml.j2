services:
  x-ui:
    image: bigbugcc/3x-ui:v2.8.5
    container_name: 3x-ui
    restart: unless-stopped
    ports:
      - "127.0.0.1:2053:2053"
      - "2096:2096"
      - "443:443"
    volumes:
      - ./data:/etc/x-ui
      - ./certificates:/root/cert
      - ./logs:/var/log/x-ui
    environment:
      - TZ=Europe/Moscow
      - XRAY_ENABLE=true
    cap_add:
      - NET_ADMIN
    sysctls:
      - net.ipv6.conf.all.disable_ipv6=0
    command: /app/x-ui bin -l ru
