services:
  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    restart: unless-stopped
    network_mode: "host"  
    environment:
      - GF_SECURITY_ADMIN_USER= "{{ grafana_admin_user }}"
      - GF_SECURITY_ADMIN_PASSWORD="{{ grafana_admin_password }}"
      - GF_SERVER_HTTP_PORT={{grafana_port}}
      - GF_SERVER_HTTP_ADDR={{grafana_http_addr}} 
    volumes:
      - grafana_data:/var/lib/grafana
      - ./provisioning/datasources:/etc/grafana/provisioning/datasources
      - ./provisioning/dashboards/dashboard.yml:/etc/grafana/provisioning/dashboards/dashboard.yml
      - ./provisioning/dashboards:/var/lib/grafana/dashboards
      - ./provisioning/notifiers:/etc/grafana/provisioning/notifiers
      - ./provisioning/alerting:/etc/grafana/provisioning/alerting

volumes:
  grafana_data:
